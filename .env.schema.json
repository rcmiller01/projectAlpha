{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Environment Variables Schema",
  "type": "object",
  "properties": {
    "MONGO_ROOT_USERNAME": {
      "type": "string",
      "description": "MongoDB root username",
      "minLength": 1
    },
    "MONGO_ROOT_PASSWORD": {
      "type": "string",
      "description": "MongoDB root password",
      "minLength": 1
    },
    "MONGO_DATABASE": {
      "type": "string",
      "description": "MongoDB database name",
      "default": "emotional_ai"
    },
    "SERVER_ROLE": {
      "type": "string",
      "description": "Role of the server",
      "enum": ["primary", "secondary"]
    },
    "SERVER_ID": {
      "type": "string",
      "description": "Unique identifier for the server",
      "minLength": 1
    },
    "CLUSTER_ENABLED": {
      "type": "boolean",
      "description": "Whether clustering is enabled"
    },
    "GPU_ENABLED": {
      "type": "boolean",
      "description": "Whether GPU is enabled"
    },
    "PORT": {
      "type": "integer",
      "description": "Port number for the server",
      "minimum": 1,
      "maximum": 65535
    },
    "DRIFT_SCALING_FACTOR": {
      "type": "number",
      "description": "Scaling factor for emotional drift calculations",
      "minimum": 0.0,
      "maximum": 1.0,
      "default": 0.35
    },
    "MAX_PENALTY_THRESHOLD": {
      "type": "number",
      "description": "Maximum penalty threshold for affective delta calculations",
      "minimum": 0.0,
      "maximum": 1.0,
      "default": 0.85
    },
    "RATE_LIMIT_WINDOW": {
      "type": "integer",
      "description": "Rate limiting window in seconds",
      "minimum": 1,
      "default": 60
    },
    "RATE_LIMIT_MAX": {
      "type": "integer",
      "description": "Maximum requests per rate limit window",
      "minimum": 1,
      "default": 120
    },
    "EMOTION_LOOP_ENABLED": {
      "type": "boolean",
      "description": "Enable emotional processing loop",
      "default": true
    },
    "AUTOPILOT_ENABLED": {
      "type": "boolean",
      "description": "Enable autopilot mode",
      "default": true
    },
    "SAFE_MODE_FORCE": {
      "type": "boolean",
      "description": "Force safe mode (kill switch)",
      "default": false
    },
    "ADMIN_MASTER_KEY": {
      "type": "string",
      "description": "Master admin key for sensitive operations",
      "minLength": 8
    },
    "DEBUG": {
      "type": "boolean",
      "description": "Enable debug mode",
      "default": false
    },
    "LOG_LEVEL": {
      "type": "string",
      "description": "Logging level",
      "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
      "default": "INFO"
    }
  },
  "required": ["MONGO_ROOT_USERNAME", "MONGO_ROOT_PASSWORD", "SERVER_ROLE", "SERVER_ID", "PORT"]
}
