# ProjectAlpha Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
DATABASE_URL="sqlite:///data/projectalpha.db"
DATABASE_ECHO=false

# API Configuration
API_HOST="localhost"
API_PORT=8000
API_DEBUG=false

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FILE="logs/projectalpha.log"

# Model Configuration
CONDUCTOR_MODEL="gpt-oss-20b"
GPT5_PREVIEW_ENABLED=true
GPT5_PREVIEW_MODEL="gpt-5-preview"

# HRM Policy Configuration
HRM_POLICY_PATH=hrm/policies/default_policy.yaml
HRM_POLICY_STRICT_MODE=true
HRM_ANCHOR_TIMEOUT=30

# MoE (Mixture of Experts) Configuration
MOE_ARBITRATION_MODEL=gpt-4
MOE_CONFIDENCE_THRESHOLD=0.7
MOE_MAX_EXPERTS=5
MOE_ROUTING_STRATEGY=confidence_weighted

# SLiM Agent Configuration
SLIM_LOGIC_HIGH_MODEL=phi4-mini-reasoning:3.8b
SLIM_LOGIC_CODE_MODEL=qwen2.5-coder:3b
SLIM_LOGIC_PROOF_MODEL=deepseek-r1:1.5b
SLIM_EMOTION_VALENCE_MODEL=gemma3:1b
SLIM_EMOTION_CREATIVE_MODEL=custom-creativity:latest
SLIM_CREATIVE_METAPHOR_MODEL=custom-metaphor:latest

# Affect-Aware Routing Configuration
AFFECT_ROUTING_ENABLED=true
AFFECT_CONTEXT_WINDOW=10
AFFECT_DRIFT_DETECTION=true
AFFECT_MODULATION_STRENGTH=0.8

# Development & Testing
DRY_RUN=true
DRY_RUN_MODE=true
DRY_RUN_LOG_ALL=true
DRY_RUN_SIMULATE_DELAYS=false
DRY_RUN_FAIL_RATE=0.0
STRICT_TYPE_CHECKING=true
ENABLE_DEBUG_LOGGING=false
TEST_MODE=false

# Left Brain (Logic) SLiMs
LOGIC_HIGH_MODEL="phi4-mini-reasoning:3.8b"
LOGIC_CODE_MODEL="qwen2.5-coder:3b"
LOGIC_PROOF_MODEL="deepseek-r1:1.5b"
LOGIC_FALLBACK_MODEL="granite3.3:2b"

# Right Brain (Emotion & Creativity) SLiMs
EMOTION_VALENCE_MODEL="gemma3:1b"
EMOTION_NARRATIVE_MODEL="phi3:3.8b"
EMOTION_UNCENSORED_MODEL="artifish/llama3.2-uncensored:latest"
EMOTION_CREATIVE_MODEL="dolphin-phi:latest"

# Memory and Storage Configuration
MEMORY_FILE="data/graphrag_memory.json"
TOOL_LOG_FILE="logs/tool_requests.jsonl"

# HRM Configuration
HRM_MEMORY_FILE="data/hrm_memory.json"
HRM_TOOL_LOG_FILE="logs/hrm_tools.jsonl"

# Backend Configuration (auto, ollama, llamacpp, mock)
MODEL_BACKEND="auto"

# Performance Configuration
MAX_CONTEXT_LENGTH=4096
MAX_GENERATION_LENGTH=1024
TEMPERATURE=0.7
TOP_P=0.9
